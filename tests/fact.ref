FACT +
    START
    ENTRY Go
    EXTRN Numb, Symb, Cvd, First 
    EXTRN Mul
    EXTRN Prout, Card, M1

Go      = <Fact <Numb <Card ' Give a number: '>>>

Fact
    /0/ = 
    E.N = <Pr <Symb E.N> '!=' +
        <Cvd <F E.N>>> + 
        <Go>

F   /1/ = /1/
    E.N = <Mul (E.N) <F <M1 E.N>>>

Pr      =
    E.S = <Pr1 <First /80/ E.S>>

Pr1 (E.S) E.E +
        = <Prout E.S> <Pr E.E>
    '*' E.S +
        = <Prout E.S>

    END
