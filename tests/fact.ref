FACT +
    START

    ENTRY Go
    EXTRN Numb, Symb, Cvd, First
    EXTRN Mul
    EXTRN Prouts, Card, M1

    IMPL

Go      = <Fact <Numb <Card ' Give a number: '>>>

Fact
    0   = 
    E.N = <Pr E.N '!=' +
        <Cvd <F E.N>>> + 
        <Go>

F   1   = 1
    E.N = <Mul (E.N) <F <M1 E.N>>>

Pr      =
    E.S = <Pr1 <First 80 E.S>>

Pr1 (E.S) E.E +
        = <Prouts E.S> <Pr E.E>
    '*' E.S +
        = <Prouts E.S>

    END
