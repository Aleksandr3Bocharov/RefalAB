FACT +
    START
    ENTRY Go
    EXTRN Numb, Symb, Cvd, First 
    EXTRN Mul
    EXTRN Prout, Card, M1

Go      = <Fact <Numb <Card ' Give a number: '>>>

Fact
    /0/ = 
    E.1 = <Pr <Symb E.1> '!=' +
        <Cvd <F E.1>>> + 
        <Go>

F   /1/ = /1/
    E.1 = <Mul (E.1) <F <M1 E.1>>>

Pr      =
    E.1 = <Pr1 <First /80/ E.1>>

Pr1 (E.1) E.2 +
        = <Prout E.1> <Pr E.2>
    '*' E.1 +
        = <Prout E.1>

    END
